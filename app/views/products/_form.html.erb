    <%= form.label :product_name %>
    <%= form.text_field :product_name, id: :product_product_name %>
  </div>

  <div class="field">
    <%= form.label :product_description %>
    <%= form.text_field :product_description, id: :product_product_description %>
  </div>

  <div class="field">
    <%= form.label :created_at %>
    <%= form.datetime_select :created_at, id: :product_created_at %>
  </div>

  <div class="field">
    <%= form.label :modified_at %>
    <%= form.datetime_select :modified_at, id: :product_modified_at %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
